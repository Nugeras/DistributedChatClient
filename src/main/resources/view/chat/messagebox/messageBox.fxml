<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ch.hsr.view.chat.messagebox.MessageBoxController">

    <Label fx:id="toUsernameLabel"/>

    <HBox>
        <padding>
            <Insets top="10"/>
        </padding>

        <ListView fx:id="messageListView" editable="true"/>
    </HBox>

    <HBox>
        <padding>
            <Insets top="10"/>
        </padding>

        <HBox>
            <padding>
                <Insets right="10"/>
            </padding>

            <TextArea fx:id="messageTextArea" maxHeight="70.0" prefWidth="184.0"/>
        </HBox>

        <Button fx:id="sendButton" disable="true" onAction="#send" text="Send">
            <HBox.margin>
                <Insets top="15.0"/>
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
